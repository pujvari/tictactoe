<UserControl x:Class="TicTacToe.Controls.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicTacToe.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <Border x:Name="Border" BorderThickness="3" BorderBrush="White" Margin="-2" Background="Transparent">
            <Button x:Name ="Button" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" Click="Click">
                <Image x:Name="Picture" HorizontalAlignment="Center" VerticalAlignment="Center"/>
             </Button>
        </Border>
    </Grid>
</UserControl>
