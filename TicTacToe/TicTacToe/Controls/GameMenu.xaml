<UserControl x:Class="TicTacToe.Controls.GameMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicTacToe.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:MenuButton Grid.Column="0" x:Name="basicX">
            <local:MenuImage Source="../Images/x.png"/>
        </local:MenuButton>
        <local:MenuButton Grid.Column="1" x:Name="basicO">
            <local:MenuImage Source="../Images/o.png"/>
        </local:MenuButton>
        <local:MenuButton Grid.Column="2" x:Name="save" Content="Save Game"/>
        <local:MenuButton Grid.Column="3" x:Name="reset" Content="Reset"/>
        <local:MenuButton Grid.Column="4" x:Name="back" Content="Back"/>
    </Grid>
</UserControl>
